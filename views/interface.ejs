    <link rel="stylesheet" href="css/style.css" />

    <title>Dépose pdf</title>
  </head>
  <body>
    <div id="container">
      <input type="file" id="inpFile" />
      <!--type file parcour l'ordinateur -->
      <div id="uploadSection">
        <button
          class="btn btn-outline-secondary"
          onclick="document.getElementById('inpFile').click()"
        >
          Sélectionnez un PDF
        </button>
        <div class="drop-zone">
          <span class="drop-zone__prompt"> Ou glissez un PDF ici</span>
          <input
            type="file"
            name="myFile"
            class="drop-zone__input"
            id="inpFile"
          />
        </div>
      </div>
      <div id="modal">
        <button type="button" class="btn btn-secondary" id="btnRadiographie">
          Radiographie
        </button>
        <button type="button" class="btn btn-secondary" id="btnEchographie">
          Échographie
        </button>
        <button type="button" class="btn btn-secondary" id="btnRadioEcho">
          Toutes Modalités
        </button>
      </div>
      <div id="recapArray">
        <table>
          <tr>
            <th>NOM</th>
            <th>PRÉNOM</th>
            <th>DATE DE NAISSANCE</th>
            <th>IPP</th>
            <th>MODALITÉ</th>
          </tr>
